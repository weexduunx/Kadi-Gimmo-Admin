{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title 'Welcome' %}

{% block page_content %}
   <div class="container">
       <div class="row">
           <div class="col-6 alert-info" >



               <span class="display-3">{{ countAllBien['value'] }}</span>Biens
           </div>
           <div class="col-6 alert-success">
                <span class="display-3">{{ countAllClient['value']}}</span>Clients
           </div>
       </div>
           <div class="row mt-3">
               <div class="col-12">
                   <p class="h3">Listes des Achats</p>
                   <ul class="list-group">
                       {% for achat in countAllAchat %}
                       <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ achat.titre }}
                           <span class="badge bg-primary rounded-pill"><i class="fa fa-money"></i></span>
                       </li>
                       {% endfor %}
                   </ul>
               </div>

           </div>

   </div>

{% endblock %}
